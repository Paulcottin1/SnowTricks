{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="register-login text-center container align-self-center">
        {{ form_start(form) }}
        <h1>Inscription</h1>
        <div>
            {{ form_row(form.firstname) }}
        </div>
        <div>
            {{ form_row(form.lastname) }}
        </div>
        <div>
            {{ form_row(form.email) }}
        </div>
        <div>
            {{ form_row(form.password) }}
        </div>
        <button class="btn btn-info">{{ button_label|default('S\'inscrire') }}</button>
        {{ form_end(form) }}
        <div>
            <a href="{{ path('login') }}">Vous avez déjà un compte ?</a>
        </div>
    </div>
{% endblock %}
