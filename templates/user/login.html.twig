{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% if error %}
        <div class="flash-warning">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    <div class="slogan row justify-content-center background-color">
        <h1 class="col-8 text-center padding-top-h1">CONNEXION</h1>
    </div>
    <div class="row justify-content-center background-margin">
        <div class="register-login text-center col-lg-6 col-md-6 col-sm-10 col-10 border-shadow">
            <form action="{{ path('login') }}" method="post">
                <div class="margin-bottom">
                    <label for="email" class="block text-green">Email :</label>
                    <input type="text" id="email" name="_email" value="{{ last_username }}" />
                </div>
                <div class="margin-bottom">
                    <label for="password" class="block text-green">Mot de passe :</label>
                    <input type="password" id="password" name="_password" />
                </div>
                <button type="submit" class="btn btn-green padding-left padding-right">Se connecter</button>
            </form>
            <div>
                <a href="{{ path('register') }}" class="text-green"> S'inscrire </a>
            </div>
            <div>
                <a href="{{ path('forgot_password') }}" class="text-green"> Mot de passe oubli√© ? </a>
            </div>
        </div>
    </div>
{% endblock %}
