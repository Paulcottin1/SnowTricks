{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="slogan row justify-content-center background-color">
        <h1 class="col-8 text-center padding-top-h1">Votre profil</h1>
    </div>
    <div class="row justify-content-center background-margin">
        <div class="register-login text-center col-lg-6 col-md-6 col-sm-10 col-10 border-shadow">
            <img class="logo" src="{{ asset('/assets/images/'~ user.avatar ) }}" alt="Logo">
            <p> Actuellement : {{ user.avatar }} </p>
            {{ form_start(form) }}
                <div class="margin-bottom text-green">
                    {{ form_row(form.avatar) }}
                </div>
                <div class="margin-bottom text-green">
                    {{ form_row(form.firstname) }}
                </div>
                <div class="margin-bottom text-green">
                    {{ form_row(form.lastname) }}
                </div>
                <div class="margin-bottom text-green">
                    {{ form_row(form.email) }}
                </div>
                <div class="margin-bottom text-green">
                    {{ form_row(form.password) }}
                </div>
                <button type="submit" class="btn btn-green padding-left padding-right">Modifier</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
