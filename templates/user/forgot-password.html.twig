{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="slogan row justify-content-center background-color">
        <h1 class="col-8 text-center padding-top-h1">Mot de passe oublié</h1>
    </div>
    <div class="row justify-content-center background-margin">
        <div class="register-login text-center col-lg-6 col-md-6 col-sm-10 col-10 border-shadow">
            <p class="text-center text-green">Vous avez oublié votre message, renseignez votre adresse mail pour recevoir un nouveau mot de passe par e-mail </p>
            {{ form_start(form) }}
            <div class="margin-bottom text-green">
                {{ form_row(form.email) }}
            </div>
            <button class="btn btn-green padding-right padding-left">{{ button_label|default('Envoyez moi un e-mail') }}</button>
            {{ form_end(form) }}
            <div>
                <a href="{{ path('login') }}" class="text-green"> Se connecter </a>
            </div>
        </div>
    </div>
{% endblock %}
